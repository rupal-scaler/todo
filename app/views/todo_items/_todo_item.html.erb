<div class="row clearfix">
    <% if todo_item.completed? %>
    <div class="complete">
    <%= link_to "Mark as Complete", complete_todo_list_todo_item_path(@todo_list, todo_item.id), data: { turbo_method: :patch} %>
    </div>
    <div class="todo_item">
    <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
    </div>
    <div class="trash">
    <%= link_to "Delete", todo_list_todo_item_path(@todo_list, todo_item.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
    <% else %>
    <div class="complete">
    <%= link_to "Mark as Complete", complete_todo_list_todo_item_path(@todo_list, todo_item.id), data: { turbo_method:  :patch} %>
    </div>
    <div class="todo_item">
    <p><%= todo_item.content %></p>
    </div>
    <div class="trash">
    <%= link_to "Delete", todo_list_todo_item_path(@todo_list, todo_item.id),data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
    <% end %>
</div>